<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kamluen.elasticsearch.dao.kamluen.PtfFavDao">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kamluen.elasticsearch.entity.PtfFav">
        <id column="ptf_fav_id" property="ptfFavId"/>
        <result column="user_id" property="userId"/>
        <result column="ptf_id" property="ptfId"/>
        <result column="display_no" property="displayNo"/>
        <result column="owner" property="owner"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_status" property="isStatus"/>
        <result column="is_see" property="isSee"/>
        <result column="from_user_id" property="fromUserId"/>
    </resultMap>
    <select id="whetherToCollect" resultType="java.lang.Integer">
       SELECT strategy_id FROM strategy_fav WHERE from_user_id = #{userId}   AND type ='C' and is_status=1;
    </select>
</mapper>